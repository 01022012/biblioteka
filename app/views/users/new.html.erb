<% content_for :sign_in do %>
<h1>Sign Up</h1>

<%= form_for @user do |f| %>

  <% unless @user.errors.empty? %>
    <div class="alert-message block-message error">
      <h2>Please check the following information</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <fieldset>
    <div class="clearfix">
 
      <div class="input">
        <%= f.text_field :email, :placeholder=>"Your Email Address" %>
      </div>
    </div>
    <div class="clearfix">
    
      <div class="input">
        <%= f.password_field :password, :placeholder=>"Your password" %>
      </div>
    </div> 
    <div class="clearfix">
    
      <div class="input">
        <%= f.password_field :password_confirmation, :placeholder=>"Your password confirmation" %>
      </div>
    </div>
  </fieldset>
 
  <div class="actions">    
   <%= f.submit "Sign up", class: 'btn btn primary btn-large'%>
  </div>

<% end %>
<div class="sign-in-links">
			<%= link_to 'Forgot your password?', passwords_new_path %><br /><br />
			<%= link_to 'Login', new_session_path %>
		</div>
<% end%>
